<p id="notice"><%= notice %></p>

<h1>Listing Lactic Matches</h1>

<table>
  <thead>
    <tr>
      <th>Requestor</th>
      <th>Responder</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lactic_matches.each do |lactic_match| %>
      <tr>
        <td><%= lactic_match.requestor %></td>
        <td><%= lactic_match.responder %></td>
        <td><%= lactic_match.status %></td>
        <td><%= link_to 'Show', lactic_match %></td>
        <td><%= link_to 'Edit', edit_lactic_match_path(lactic_match) %></td>
        <td><%= link_to 'Destroy', lactic_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

